<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"> <!-- Centraliza o conteúdo -->

    <!-- ImageView com espaçamento e centralizado -->
    <ImageView
        android:id="@+id/imagemGit"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp" /> <!-- Espaçamento abaixo da imagem -->

    <!-- TextView com espaçamento superior -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="Bairro"
        android:layout_marginTop="16dp" /> <!-- Espaçamento acima do texto -->

</LinearLayout>
